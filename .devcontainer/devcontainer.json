{
  "name": "Archilume Development Container",
  "image": "mcr.microsoft.com/devcontainers/python:3.12",

  "features": {
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },

  "postCreateCommand": "bash .devcontainer/setup.sh",

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-python.black-formatter",
        "google.geminicodeassist",
        "Anthropic.claude-code",
        "kisstkondoros.vscode-gutter-preview",
        "vscode-infra.image-viewer",
        "mcrespo.veriv",
        "ms-azuretools.vscode-docker",
        "analytic-signal.preview-tiff",
        "mechatroner.rainbow-csv",
        "GrapeCity.gc-excelviewer"
      ],
      "settings": {
        "python.defaultInterpreterPath": "${containerWorkspaceFolder}/.venv/bin/python",
        "python.formatting.provider": "black",
        "editor.formatOnSave": true,
        "workbench.editorAssociations": {
          "*.apng": "imagePreview.previewEditor",
          "*.tiff": "tiff.preview",
          "*.tif": "tiff.preview"
        }
      }
    }
  },

  "remoteEnv": {
    "PATH": "${containerEnv:PATH}:/usr/local/radiance/bin:${containerEnv:HOME}/.local/bin",
    "RAYPATH": "/usr/local/radiance/lib",
    "UV_LINK_MODE": "copy",
    "CLAUDE_API_KEY": "${localEnv:CLAUDE_API_KEY}"
  },

  "mounts": [
    // GitHub CLI config mount - only if directory exists
    // "source=${localEnv:HOME}${localEnv:USERPROFILE}/.config/gh,target=/home/vscode/.config/gh,type=bind,consistency=cached"
  ],

  "forwardPorts": [],

  "postAttachCommand": {
    "server": "echo 'Archilume development environment ready!'"
  }
}
